@model Yyuri.Security.Models.Account.RegisterViewModel

<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body modal-body-sub_agile">
            <div class="col-md-8 modal_body_left modal_body_left1">
                <h3 class="agileinfo_sign">ĐĂNG KÝ</h3>
                
                <form id="UserRegistrationForm" name="UserRegistrationForm" asp-controller="Account" asp-action="RegisterUser">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="RegistrationInValid">
                    <div class="styled-input agile-styled-input-top">
                        <input asp-for="Email" type="email" name="Email" required="">
                        <label>Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div id="alert_label_email_register">
                        </div>
                    </div>
                    <div class="styled-input">
                        <input asp-for="Password" type="password" name="Password" required="">
                        <label>Mật khẩu</label>
                        <span asp-validation-for="Password"></span>
                        <div id="alert_label_password_register">
                        </div>
                    </div>
                    <div class="styled-input">
                        <input asp-for="ConfirmPassword" type="password" name="ConfirmPassword" required="">
                        <label>Xác nhận mật khẩu</label>
                        <span asp-validation-for="ConfirmPassword"></span>
                        <div id="alert_label_confirmpassword_register">
                        </div>
                    </div>
                    <button id="register" name="register" type="button">Đăng ký</button>
                </form>
                <ul class="social-nav model-3d-0 footer-social w3_agile_social top_agile_third">
                    <li>
                        <a href="#" class="facebook">
                            <div class="front"><i class="fa fa-facebook" aria-hidden="true"></i></div>
                            <div class="back"><i class="fa fa-facebook" aria-hidden="true"></i></div>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="twitter">
                            <div class="front"><i class="fa fa-twitter" aria-hidden="true"></i></div>
                            <div class="back"><i class="fa fa-twitter" aria-hidden="true"></i></div>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="instagram">
                            <div class="front"><i class="fa fa-instagram" aria-hidden="true"></i></div>
                            <div class="back"><i class="fa fa-instagram" aria-hidden="true"></i></div>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="pinterest">
                            <div class="front"><i class="fa fa-linkedin" aria-hidden="true"></i></div>
                            <div class="back"><i class="fa fa-linkedin" aria-hidden="true"></i></div>
                        </a>
                    </li>
                </ul>
                <div class="clearfix"></div>
                <p><a href="#">Bằng cách nhấp vào đăng ký, tôi đồng ý với các điều khoản của bạn</a></p>

            </div>
            <div class="col-md-4 modal_body_right modal_body_right1">
                <img src="~/EliteTemplate/images/log_pic.jpg" alt=" " />
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <!-- //Modal content-->
</div>