@model Yyuri.Security.Models.Account.LoginViewModel

<div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body modal-body-sub_agile">
            <div class="col-md-8 modal_body_left modal_body_left1">
                <h3 class="agileinfo_sign">Đăng Nhập</h3>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div id="notification_login">
                        <div class="alert alert-danger fade in alert-dismissible show">
                            @ViewBag.ErrorMessage
                        </div>
                    </div>
                }
                <form id="UserLoginForm" asp-controller="Account" asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="LoginInValid">
                    <div id="alert_placeholder_login">
                    </div>
                    <div class="styled-input agile-styled-input-top">
                        <input asp-for="Email" type="email" name="Email" oninput="oninputEmailLogin()">
                        <label>Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div id="alert_label_email_login">
                        </div>
                    </div>
                    <div class="styled-input">
                        <input asp-for="Password" type="password" name="Password" oninput="oninputPassWordLogin()">
                        <label>Mật khẩu</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div id="alert_label_password_login">
                        </div>
                    </div>
                    <div class="styled-input">
                        <input asp-for="RememberMe" class="form-check-input">
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>
                    <button type="button" id="login" name="login">Đăng nhập</button>
                </form>
                <ul class="social-nav social-nav-custom model-3d-0 model-3d-0-custom footer-social w3_agile_social top_agile_third">
                    <li>
                        <a href="Account/FacebookLogin" class="facebook">
                            <div class="front"><i class="fa fa-facebook" aria-hidden="true">   Đăng nhập bằng Facebook</i></div>
                            <div class="back"><i class="fa fa-facebook" aria-hidden="true">   Đăng nhập bằng Facebook</i></div>
                        </a>
                    </li>
                    <li>
                        <a href="Account/GoogleLogin" class="pinterest">
                            <div class="front"><i class="fa fa-google" aria-hidden="true">   Đăng nhập bằng Google</i></div>
                            <div class="back"><i class="fa fa-google" aria-hidden="true">   Đăng nhập bằng Google</i></div>
                        </a>
                    </li>
                </ul>
                <div class="clearfix"></div>
                <p>Thành viên mới?<a href="#" data-toggle="modal" data-target="#UserRegistrationModal" style="color:darkblue">  Đăng ký </a>ngay</p>
            </div>
            <div class="col-md-4 modal_body_right modal_body_right1">
                <img src="~/EliteTemplate/images/log_pic.jpg" alt=" " />
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <!-- //Modal content-->
</div>